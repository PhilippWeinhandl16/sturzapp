<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewAuswahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/your_selection_risk_patient"
        android:textSize="26dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewAngemeldet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAuswahl"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/signed_in_as"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewemailRP_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAngemeldet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/email"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/textViewfirstNameRP_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewemailRP_display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="@string/first_name"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textViewlastNameRP_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewfirstNameRP_display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/last_name"
        android:textSize="22dp" />

    <Button
        android:id="@+id/buttonDatenAendern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewlastNameRP_display"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/change_data" />

    <TextView
        android:id="@+id/textView_zugehoeriger_notfallkontakt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDatenAendern"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/change_related_emergency_contact"
        android:textSize="26dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNotfallkontakt_aendern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_zugehoeriger_notfallkontakt"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/change_emergency_contact" />

    <Button
        android:id="@+id/button_zumNotfallbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNotfallkontakt_aendern"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="@string/go_to_emergency_button" />

</RelativeLayout>
