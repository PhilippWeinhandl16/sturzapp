<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/TextViewNFK_aendern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daten von ihrem Notfallkontakt ändern"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextemailNFK_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-Mail-Adresse"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editTextnameNFK_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vorname und Nachname"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"/>



    <Button
        android:id="@+id/Button_NFK_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmergencyContactEmail"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:text="Notfallkontakt ändern"
        android:textColor="@color/white" />


</LinearLayout>
