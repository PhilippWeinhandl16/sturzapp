<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textViewAuswahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ihre Auswahl: Notfallkontakt"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewAngemeldet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAuswahl"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Sie sind angemeldet als: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAngemeldet"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDatenAendern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEmail"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Daten Ã¤ndern" />

    <Button
    android:id="@+id/buttonRisikopatientAnzeigen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/buttonDatenAendern"
    android:layout_marginTop="16dp"
    android:layout_centerHorizontal="true"
    android:text="Risikopatienten anzeigen" />

</RelativeLayout>

